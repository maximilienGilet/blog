  <Footer />

  <style>
    /* ===== Hero Section ===== */
    #hero {
      @apply mx-auto max-w-3xl items-center gap-4 px-4 pb-14 pt-8 lg:max-w-max lg:justify-center;
    }
    #hero h1 {
      @apply inline-block text-3xl font-bold sm:my-6 sm:text-5xl;
    }
    #hero .rss-link {
      @apply mb-6;
    }
    #hero .rss-icon {
      @apply mb-2 h-6 w-6 scale-110 fill-skin-accent sm:mb-3 sm:scale-125;
    }
    #hero p {
      @apply my-2;
    }
    .social-wrapper {
      @apply mt-4 flex flex-col sm:flex-row sm:items-center;
    }
    .social-links {
      @apply mb-1 mr-2 whitespace-nowrap sm:mb-0;
    }

    /* ===== Featured & Recent Posts Sections ===== */
    #featured,
    #recent-posts,
    #latest-projects {
      @apply pb-6 pt-12;
    }
    #featured h2,
    #recent-posts h2,
    #latest-projects h2 {
      @apply text-2xl font-semibold tracking-wide;
    }
    .all-posts-btn-wrapper {
      @apply my-8 text-center;
    }

    .blinking-underscore {
      display: inline-block;
      width: 1ch;
      animation: blink 1s steps(1) infinite;
    }
    @keyframes blink {
      0%,
      50% {
        opacity: 0.8;
      }
      51%,
      100% {
        opacity: 0;
      }
    }

    .hero-badges {
      @apply flex flex-wrap gap-2;
    }
    .badge {
      @apply rounded-lg;
      display: inline-block;
      padding: 0.32em 1.1em;
      font-size: 1.05em;
      font-family: inherit;
      font-weight: 600;
      letter-spacing: 0.02em;
      background: #f3f3f3;
      color: #222;
      border: 1.5px solid #e0e0e0;
      box-shadow: 0 1px 4px #0001;
      transition:
        background 0.15s,
        color 0.15s;
    }
    .badge-dev {
      background: #eaf3ff;
      color: #007aff;
      border-color: #007aff;
    }
    .badge-freelance {
      background: #f0fff4;
      color: #2ea96b;
      border-color: #2ea96b;
    }

    .tech-tree {
      font-size: 1.08em;
      color: rgb(var(--color-text-base));
      margin-bottom: 1.5em;
      margin-top: 0.5em;
      padding: 0.7em 0 0.7em 0.2em;
      border-radius: 0.5em;
      box-shadow: none;
    }
    .tech-tree ul {
      list-style: none;
      margin: 0;
      padding-left: 1.2em;
      position: relative;
    }
    .tech-tree ul ul {
      margin-left: 0.2em;
      padding-left: 1.2em;
    }
    .tech-tree ul ul::before {
      content: "";
      position: absolute;
      top: 0.7em;
      left: 0.3em;
      bottom: 0.3em;
      width: 0;
      border-left: 1.5px solid #b6b6b6;
      z-index: 0;
    }
    .tech-tree li {
      margin: 0.1em 0;
      line-height: 1.4;
      position: relative;
    }
    .tech-tree li:not(:last-child)::after {
      content: "";
      position: absolute;
      left: -1.1em;
      top: 1.1em;
      width: 1.1em;
      height: 0;
      border-top: 1.5px solid #b6b6b6;
      z-index: 1;
    }
    .tech-tree li:last-child::before {
      content: "";
      position: absolute;
      left: -1.1em;
      top: 1.1em;
      width: 1.1em;
      height: 0.7em;
      border-top: 1.5px solid #b6b6b6;
      border-left: 1.5px solid #b6b6b6;
      border-bottom-left-radius: 4px;
      z-index: 1;
    }
    .tech-tree .folder {
      font-weight: bold;
      color: #888;
      position: relative;
      z-index: 2;
    }
    .tech-tree .icon {
      display: inline-block;
      vertical-align: middle;
      margin-right: 0.5em;
      width: 1.1em;
      height: 1.1em;
      position: relative;
      z-index: 2;
    }
  </style>
</Layout>
